<% if object.errors.any? %>
    <div class="error-explanation">
        <div class="alert alert-danger">
             <%= t 'error.count' %>
        </div>
        <ul>
            <% object.errors.full_messages.uniq.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>