<%= turbo_frame_tag post do %>

    <li class="fs-4 lh-sm pb-2">

        <% if post.is_liked_by?(current_user) %>
            <% data = { method: :delete, class: 'text-highlight' } %>
        <% else %>
            <% data = { method: :post, class: 'text-secondary'}%>
        <% end %>
        <%= turbo_frame_tag "post-#{post.id}-upvote" do %>
            <%= render 'posts/upvote_form', post: post, data: data %>
        <% end %>

        <span class="lh-1 mt-2">
            <%= link_to post.title, post_path(post),
                        class: "fs-4 text-dark",
                        data: { turbo_frame: "_top" } %>

            <% if current_user_is_admin || current_user_is_author(post) %>
                <%= form_with(model: post, method: :delete, class: "d-inline-block", data: { turbo_confirm: "Are you sure?", turbo: true }) do |f| %>
                    <%= f.submit "delete" %>
                <% end %>
            <% end %>
        </span>

        <% if !post.link.blank? %>
            <span class="fs-6">
                (Read at: <%= link_to post.short_link, post.link,
                                    class: "text-secondary" %>)
            </span>
        <% end %>

        <div class="fs-5 mt-1">
            <%= turbo_frame_tag "post-#{post.id}-points" do %>
                <%= pluralize(post.points, "point") %>
            <% end %>
            by <%= link_to post.user.username, post.user,
                        class: "text-secondary",
                        data: { turbo_frame: '_top' } %> 
            <%= time_ago_in_words(post.created_at) %> ago
            &emsp;|&emsp;
            <%= link_to "#{pluralize(post.comments.count, 'comment')}",
                        post_path(post),
                        data: { turbo_frame: '_top' } %>
        </div>
    </li>
<% end %>