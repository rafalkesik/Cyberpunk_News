<% relation = post.my_liking_relation(current_user) %>

<%= form_with(url: liking_relation_path(relation), scope: 'liking_relation', 
                method: :delete, class: 'd-inline-block') do |f|%>
    <%= f.hidden_field :liked_post_id, value: post.id %>
    <%= f.hidden_field :liking_user_id, value: current_user.id %>
    <%= button_tag(type: 'submit', class: 'btn', name: nil) do %>
        <i class="fa-solid fa-circle-up text-highlight"></i>
    <% end %>
<% end %>