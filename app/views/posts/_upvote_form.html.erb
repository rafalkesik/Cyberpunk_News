<%= form_with(url: liking_relations_path, scope: 'liking_relation', 
                method: :post, class: 'd-inline-block') do |f|%>
    <%= f.hidden_field :liked_post_id,  value: post.id %>
    <%= f.hidden_field :liking_user_id, value: current_user&.id %>
    <%= button_tag(type: 'submit', class: 'btn', name: nil) do %>
        <i class="fa-solid fa-circle-up text-secondary"></i>
    <% end %>
<% end %>