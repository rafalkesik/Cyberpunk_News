<h2>Reset password:</h2>
<%= form_with model: @user do |f| %>
    <%= f.hidden_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "Update password", method: :update %>
<% end %>