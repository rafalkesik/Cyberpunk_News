<div class="mb-5">
    <h1>User:</h1>
    <h3><%= @user.username %></h3>
    <% if @user === current_user %>
        <%= form_with url: sessions_path, method: :delete do |f|%>
            <%= f.submit "Logout" %>
        <% end %>
    <% end %>
</div>

<div>
    <%= render partial: '/shared/form', locals: { user: @new_user } %>
    <% if @user === current_user %>
        <%= render 'reset_form' %>
    <% end %>
</div>

