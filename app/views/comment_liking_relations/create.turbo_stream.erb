<%= turbo_stream.update('flash-messages',
                        partial: 'layouts/flash') %>

<% if @comment.present? %>
  <%= turbo_stream.update "comment-#{@comment.id}-upvote",
                          partial: 'comments/downvote_form',
                          locals: { comment: @comment } %>

  <%= turbo_stream.update "comment-#{@comment.id}-points",
                          (t :points, count: @comment.points) %>
<% end %>
